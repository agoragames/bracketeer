source 'https://rubygems.org'

gem 'rails', '3.2.8'

group :assets do
  gem 'sass-rails',   '~> 3.2.3'
  gem 'coffee-rails', '~> 3.2.1'
  gem 'less'

  # Because it's a hackathon, which means Bootstrap!!!!! :D
  gem 'therubyracer'
  gem 'twitter-bootstrap-rails'
  gem 'uglifier', '>= 1.0.3'
  gem 'ejs'
end

gem 'jquery-rails'



group :production do
  gem 'thin'
end

group :development do
  gem 'guard'
  gem 'guard-rspec'
  gem 'guard-coffeescript'

  gem 'rspec-rails'
  gem 'rails-backbone'
  gem 'unicorn'
end
